{% macro formgroup(name, label, required, fgclass, placeholder, value, help, input_attr) %}
    <div class="form-group {{fgclass}}">
        <label for="{{name}}">{{label|safe}}{% if required %}&nbsp;<span class="form-required">*</span>{% endif %}</label>
        <input type="text" class="form-control" id="{{name}}" name="{{name}}" placeholder="{{placeholder}}" {{input_attr|safe}}>
        {% if help != '' or help != null %}
        <p class="help-block">{{help}}</p>
        {% endif %}
    </div>
{% endmacro %}

{% macro errorsFor(which) %}
<transition name="float">
  <div v-show="errors.has('{{which}}')" class="form-error-box">{%raw%}{{ errors.first('{%endraw%}{{which}}{%raw%}') }}{%endraw%}</div>
</transition>
{% endmacro %}

