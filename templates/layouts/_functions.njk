{% macro formcheckboxes(name, legend, options, required, help, fgclass) %}
<div class="form-group {{fgclass}}">
	<fieldset>
		<legend>{{legend|safe}}{% if required %}&nbsp;<span class="form-required">*</span>{% endif %}</legend>
		{% for value, label in options %}
		<div class="checkbox">
			<label><input type="checkbox" name="{{name}}" id="{{name}}-{{value}}" value="{{value}}"> {{label}}</label>
		</div>
		{% endfor %}
		{% if help != '' %}
		<div class="input-help">
			{{help|safe}}
		</div>
		{% endif %}
	</fieldset>
</div>
{% endmacro %}

