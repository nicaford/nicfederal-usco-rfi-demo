{% macro formselect(name, label, options, required, help, selected, fgclass) %}
<div class="form-group {{fgclass}}">
	<label for="{{name}}">{{label|safe}}{% if required %}&nbsp;<span class="form-required">*</span>{% endif %}</label>
	<select id="{{name}}" name="{{name}}" class="form-control">
		<option{% if not selected %} selected{% endif %}>Please select...</option>
		{% for value, title in options %}
		<option value="{{value}}"{% if selected == value %} selected{% endif %}>{{title}}</option>
		{% endfor %}
	</select>
	{% if help != '' %}
	<div class="input-help">
		{{help|safe}}
	</div>
	{% endif %}
</div>
{% endmacro %}
