{% macro formgroupselect(name, label, required, fgclass, options, selected, help, input_attr) %}
    <div class="form-group {{fgclass}}">
        <label for="{{name}}">{{label|safe}}{% if required %}&nbsp;<span class="form-required">*</span>{% endif %}</label>
        <select class="form-control" id="{{name}}" name="{{name}}" {{input_attr}}>
            {% for key, value in options %}
            <option value="{{key}}"{% if key == selected %}selected{% endif %}>{{value}}</option>
            {% endfor %}
        </select>
        {% if help != '' %}
        <p class="help-block">{{help}}</p>
        {% endif %}
    </div>
{% endmacro %}

{% macro formgroupfile(name, label, fgclass, placeholder, value, help, input_attr) %}
    <div class="form-group {{fgclass}}">
        <label for="{{name}}">{{label|safe}}</label>
        <div class="input-group input-file">
            <label class="input-group-btn">
                <span class="btn btn-tertiary">Browse&hellip; <input type="file" name="{{name}}" id="{{name}}" class="hide" multiple></span>
            </label>
            <input type="text" class="form-control" {{input_attr}} readonly>
        </div>
        {% if help != '' %}
        <p class="help-block">{{help}}</p>
        {% endif %}
    </div>
{% endmacro %}

